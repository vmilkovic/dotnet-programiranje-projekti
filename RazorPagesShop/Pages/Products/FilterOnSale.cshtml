@page
@model Shop.Pages_Products.FilterOnSaleModel

@{

  ViewData["Title"] = "Filter proizvoda na akciji";
}

<h1>Filter proizvoda na akciji</h1>

<p>
  <a asp-page="Create">Izradi Novi</a>
</p>
<form method="post">
  <div class="form-group form-check">
    <label class="form-check-label">
      <input class="form-check-input" asp-for="OnSale" />
    </label>
  </div>
  <div class="form-group">
    <input type="submit" value="Filtriraj" class="btn btn-primary" />
  </div>
</form>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Product[0].Title)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Product[0].Description)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Product[0].Price)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Product[0].Quantity)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Product[0].OnSale)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Product[0].SalePrice)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.Product)

    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.OnSale)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.SalePrice)
        </td>
        <td>
          <a asp-page="./Edit" asp-route-id="@item.Id">Promjeni</a> |
          <a asp-page="./Details" asp-route-id="@item.Id">Detalji</a> |
          <a asp-page="./Delete" asp-route-id="@item.Id">Izbri≈°i</a>
        </td>
      </tr>

    }
  </tbody>
</table>
